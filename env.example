# Database Configuration
# For local development (with separate pgvector container)
DB_HOST=localhost
DB_PORT=6024
# For Docker Compose deployment
# DB_HOST=postgres
# DB_PORT=5432
DB_NAME=langchain
DB_USER=langchain
DB_PASSWORD=your_db_password

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# LLM Configuration
LLM_MODEL=gpt-4o
LLM_TEMPERATURE=0.0
LLM_STREAMING=true

# Embedding Configuration
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# Redis Configuration
# For local development
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
# For Docker Compose deployment
# REDIS_HOST=redis
# REDIS_PORT=6379
# For cloud deployment (Redis Cloud)
# REDIS_URL=redis://default:your_password@your-instance.redis-cloud.com:6379
# REDIS_HOST=your-instance.redis-cloud.com
# REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Cache Configuration
CACHE_TTL=3600
CACHE_NAMESPACE=real_estate

# Email Configuration
EMAIL_SENDER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587

# Data File Paths
DATA_DICTIONARY_CSV=data/data_dictionary.csv
PROPERTIES_CSV=data/properties_augmented_vic.csv

# Authentication Configuration
SECRET_KEY=your_secret_key_for_jwt_tokens
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Streamlit Configuration
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=localhost
# For Docker deployment
# STREAMLIT_SERVER_ADDRESS=0.0.0.0
# STREAMLIT_SERVER_HEADLESS=true
# STREAMLIT_BROWSER_GATHER_USAGE_STATS=false
